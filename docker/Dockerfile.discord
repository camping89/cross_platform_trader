FROM python:3.11-slim

WORKDIR /app

# Copy requirements first for better caching
COPY requirements/discord.txt .
RUN pip install --no-cache-dir -r discord.txt

# Copy application code
COPY app/ ./app/
COPY main-discord.py .
COPY .env .

# Expose port
EXPOSE 3001

# Run the application
CMD ["python", "main-discord.py"]